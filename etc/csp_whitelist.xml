<?xml version="1.0"?>
<csp_whitelist xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Csp/etc/csp_whitelist.xsd">
    <policies>
        <policy id="script-src">
            <values>
                <value id="google-maps" type="host">maps.googleapis.com</value>
                <value id="google-maps-gstatic" type="host">*.gstatic.com</value>
            </values>
        </policy>
        <policy id="img-src">
            <values>
                <value id="google-maps" type="host">*.googleapis.com</value>
                <value id="google-maps-gstatic" type="host">*.gstatic.com</value>
                <value id="google-maps-streetview" type="host">*.ggpht.com</value>
            </values>
        </policy>
        <policy id="font-src">
            <values>
                <value id="google-fonts" type="host">fonts.gstatic.com</value>
            </values>
        </policy>
        <policy id="connect-src">
            <values>
                <value id="google-maps" type="host">*.googleapis.com</value>
            </values>
        </policy>
    </policies>
</csp_whitelist>
